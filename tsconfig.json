{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
